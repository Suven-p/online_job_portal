{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "moduleResolution": "node",
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": false,
        "baseUrl": ".",
        "paths": {
            "@root/*": [
                "./src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "./src/client/*",
        "./src/public/*",
        "./dist/*"
    ]
}
